# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overridden

# prefer a user rbenv over a system wide install
if [ -s "${HOME}/.nodenv/bin" ]; then
  nodenv_root="${HOME}/.nodenv"
elif [ -s "<%= node['nodenv']['root_path'] %>" ]; then
  nodenv_root="<%= node['nodenv']['root_path'] %>"
  export NODENV_ROOT="$nodenv_root"
fi

if [ -n "$nodenv_root" ]; then
  export PATH="${nodenv_root}/bin:$PATH"
  eval "$(nodenv init -)"
fi
